<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.samli.samli">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.VisualDetailActivity"
            android:label="@string/title_activity_visual_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.VisualFormActivity"
            android:label="@string/title_activity_visual_form"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>